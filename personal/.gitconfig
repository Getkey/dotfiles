[user]
	name = Julien Mourer
	email = getkey@getkey.eu

[core]
	editor = vim
	excludesfile = ~/.gitignore

[push]
	default = simple

[diff]
	tool = meld
	compactionHeuristic = true

[alias]
	l = log --pretty=format:\"%C(yellow)%h %Cblue%ad %Creset%s%d %Cgreen%aN\" --graph --date=short
	nb = checkout -b
	db = branch -D
	co = commit
	ch = checkout

[credential "https://github.com"]
	username = getkey

[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
